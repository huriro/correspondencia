<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Telacosultaleituraaptos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Esta Ã© a tela de consultas     " />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="selecione o tipo de sua pesquisa" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewOptions3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:paddingLeft="@dimen/cardview_default_elevation"

                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spnrTipoConsLeituraApto"
            android:layout_width="344dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/but"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edtdigiteConsLeituraApto"
            android:layout_width="344dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:ems="10"
            android:background="@drawable/but"
            android:textAlignment="center"
            android:hint="Digite sua consulta"
            android:inputType="textCapCharacters" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVleituraApto"
            android:layout_width="344dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/reg" />


    </LinearLayout>

</ScrollView>