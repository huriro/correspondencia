<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg"
    tools:context=".Reservas_Geral">

    <LinearLayout
        android:layout_width="279dp"
        android:layout_height="424dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/reg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="#041247"
            android:text=" Cadastre uma nova reserva"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonNovaReserva"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/novareserva"
            android:text="" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="#041247"
            android:text="Verifique se existe reservas agendadas "
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonConsultasReservas"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/reservacadastra"
            android:text="" />

    </LinearLayout>

</LinearLayout>